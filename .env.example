# Application
APP_NAME=Data Analysis Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600
CACHE_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# Data Processing
MAX_FILE_SIZE=104857600
CHUNK_SIZE=10000
CSV_ENCODING=utf-8
CSV_DELIMITER=,

# Statistics
OUTLIER_METHOD=iqr
OUTLIER_THRESHOLD=1.5
ZSCORE_THRESHOLD=3.0

# Visualization
CHART_THEME=plotly
CHART_WIDTH=1200
CHART_HEIGHT=600

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT=100/minute
